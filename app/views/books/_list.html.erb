  <h2>Books</h2>
  <table class="table table-hover table-inverse">
  <thead>
   <th></th>
   <th>Title</th>
   <th>Body</th>
   <th colspan="3"></th>
  </thead>
  
  <tbody>
   <% books.each do |book| %>
   <tr>
   <td><%= image_tag book.user.get_profile_image(100, 100) %></td>
   <td><%= link_to book.title, book_path(book.id) %></td>
   <td><%= book.body %></td>
   </tr>
   <% end %>
  </tbody>
  </table>