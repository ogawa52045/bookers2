 <h2 class="mt-3">New Book</h2>
 
 <%= form_with model: @book, url: books_path, method: :post do |f| %>
  <div class="form-group">
    <%= f.label :title, "Title" %><br>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :body, "Opinion" %><br>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit "Create Book", class: "btn btn-success" %>
  </div>
 <% end %>
