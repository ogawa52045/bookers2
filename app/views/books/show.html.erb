<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
    <%= render 'users/user_info', user: @book.user %>
    <%= render 'new', book: @book %>
  </div>
  <div class="col-md-8 offset-md-1">
   <h2>Book detail</h2>
   <table class="table">
   <tbody>
    <tr>
     <td><%= link_to image_tag(@book.user.profile_image), user_path(@book.user) %><br>
     <%= link_to @book.user.name, user_path(@book.user) %></td>
     <td><%= link_to @book.title, book_path(@book.id) %></td>
     <td><%= @book.body %></td>
     <% if @book.user == current_user %>
     <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
     <td><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-sm btn-danger", data: { confirm: "本当に削除しますか?" } %></td>
     <% end %>
    </tr>
   </tbody>
  </table>
  </div>
 </div>
</div>