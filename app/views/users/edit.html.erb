<h2>User info</h2>
<% if @user.errors.any? %>
 <%= @user.errors.count %>errors prohibited this obj from being saved:
 <ul>
  <% @user.errors.full_messages.each do |message| %>
   <li><%= message %></li>
  <% end %>
 </ul>
<% end %>

<%= form_with model: @user do |f| %>
 <label for="imputName">Name</label>
 <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name" %>
 <label for="inputImage">Image</label>
 <%= f.file_field :profile_image, placeholder:"Image", accept: "image/*" %>
 <label for="inputIntroduction">Introduction</label>
 <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"Introduction" %>
 <%= f.submit "Update User" %>
<% end %>